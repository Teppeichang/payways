<%= render partial: "posts/header" %>

<div class="user-container">
  <div class="user-profile">
    <div class="user-image">
      <% if @user.image.blank? %>
        <%= image_tag "/登録のピクトアイコン1.png" %>
      <% else %>
        <%= image_tag @user.image.variant(resize:'200x200') %>
      <% end %>
    </div>
    <div class="user-name">
      <h2><%= @user.name %><h2>
    </div>
    <div class="user-fav">
      <p style="color: blue;">好きなお店・ジャンル</p>
      <%= @user.favorite_shop %>
    </div>
    <div class="user-living">
      <p style="color: blue;">お住まいの地域</p>
      <%= @user.prefecture.name %>
    </div>
    <div class="user-edit">
      <% if @user == current_user %>
        <i class="far fa-edit"></i>
        <%= link_to "ユーザー情報の編集", edit_user_path(@user.id) %>
      <% end %>
    </div>
  </div>
</div>

<div class="user-post-container">
  <h1><%= @user.name %>さんの投稿一覧</h1>
  <% @posts.each do |post| %>
    <%= render partial: "posts/post", locals:{post: post} %>
  <% end %>
</div>
