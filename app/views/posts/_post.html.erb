<% @posts.each do |post| %>
    <div class="post-container">
        <div class="post-left">
            <% if post.image.blank? %>
                <p class="no-image">No Image</p>
            <% else %>
                <%= image_tag post.image %>
            <% end %>
        </div>
        <div class="post-right">
            <div class="post-right-top">
                <%= link_to post.shop_name, post_path(post.id) %>
            </div>
            <div class="post-right-bottom">
                <p><%= post.explain %></p>
            </div>
            <div class="post-tags">
                <% if post.tag_list.present? %>
                    <% post.tag_list.each do |tag| %>
                        <%= link_to tag, tag_path(tag), class:"fas fa-hashtag" %>
                    <% end %>
                <% end %>
            </div>
            <div class="posted-user">
                <p>Posted by:<%= link_to post.user.name, user_path(post.user_id) %></p>
            </div>
            <div class="post-detail">
                <%= link_to "詳細", post_path(post.id), class:"btn btn-post-detail"%>
            </div>
        </div>
    </div>
<% end %>