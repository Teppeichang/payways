<% @posts.each do |post| %>
    <div class="post-container">
        <div class="post-left">
            <% if post.image.blank? %>
                <p class="no-image">No Image</p>
            <% else %>
                <%= image_tag post.image.variant(resize:'250x250') %>
            <% end %>
        </div>
        <div class="post-right">
            <div class="post-right-top">
                <%= link_to post.shop_name, post_path(post.id) %>
            </div>
            <div class="post-tags">
                <% if post.tag_list.present? %>
                    <% post.tag_list.each do |tag| %>
                        <span class="badge badge-primary"><%= link_to tag, tag_path(tag) %></span>
                    <% end %>
                <% end %>
            </div>
            <div class="post-right-bottom">
                <%= post.explain %>
            </div>
        </div>
    </div>
<% end %>