<%= render partial: "header" %>

<div class="form-area">
  <h1>新規投稿</h1>
  <%= form_with(model: @post, local: true) do |form|%>
    <label class="form-text">店名</label>
    <%= form.text_field :shop_name, placeholder: "例:スターバックスコーヒー 原宿店", class: "shop_name" %>
    <p class="form-text">使用可能なクレジットカード/電子マネー/QRコード決済</p>
    <label class="form-text">クレジットカード</label>
    <%= form.collection_select :credit_card_id, CreditCard.all, :id, :name, {}, {class:"select-box", id: "credit_card"} %>
    <label class="form-text">電子マネー</label>
    <%= form.collection_select :e_money_id, EMoney.all, :id, :name, {}, {class:"select-box", id: "e_money"} %>
    <label class="form-text">QRコード決済</label>
    <%= form.collection_select :code_pay_id, CodePay.all, :id, :name, {}, {class: "select-box", id: "code_pay"} %>
    <p class="form-text">その他追加情報</p>
    <%= form.text_area :explain, placeholder: "例: ", class: "shop_explain" %>
    <%= form.submit "投稿する"%>
  <% end %>
</div>

<%= render partial: "footer" %>