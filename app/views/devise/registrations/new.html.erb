<%= render partial: "posts/header" %>

<%= form_with model: @user, url: user_registration_path, class: "registration-main", local: true do |f| %>
  <div class="form-main">
    <div class="signup-error">
      <%= render "shared/error_messages", model: f.object %>
    </div>
    <h1>ユーザー新規登録</h1>
    <div class="name-field">
      <p>ユーザー名<span style="color:red;">（必須）</span></p>
      <%= f.text_field :name, placeholder: "  半角英数字で入力してください" %>
    </div>
    <div class="email-field">
      <p>メールアドレス<span style="color:red;">（必須）</span></p>
      <%= f.email_field :email, placeholder: "  PC・携帯どちらでも可能", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="fav-shop-field">
      <p>好きなお店・ジャンル</p>
      <%= f.text_field :favorite_shop %>
    </div>
    <div class="living-area-field">
      <p>お住まいの地域</p>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"living-area-select"}) %>
    </div>
    <div class="password-field">
      <p>パスワード<span style="color:red;">（必須）</span></p>
      <%= f.password_field :password, placeholder:"  6文字以上の半角英数字", autocomplete: "new-password", minlength: "6" %>
    </div>
    <div class="password-confirm-field">
      <p>パスワード確認<span style="color:red;">（必須）</span></p>
      <%= f.password_field :password_confirmation, placeholder:"  同じパスワードを入力してください", autocomplete: "new-password" %>
    </div>
  </div>
  <div class="signup-btn">
    <%= f.submit "登 録" %>
  </div>
  <p class="signup-btn-bridge">または</p>
  <div class="google-signup">
    <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-google", method: :post do %>
      <i class="fab fa-google"> Googleで登録</i>
    <% end %>
  </div>
  <div class="twitter-signup">
    <%= link_to user_twitter_omniauth_authorize_path, class: "btn btn-twitter", method: :post do %>
      <i class="fab fa-twitter"> Twitterで登録</i>
    <% end %>
  </div>
  <div class="facebook-signup">
    <%= link_to user_facebook_omniauth_authorize_path, class:"btn btn-facebook", method: :post do %>
      <i class="fab fa-facebook-square"> Facebookで登録</i>
    <% end %>
  </div>
<% end %>
